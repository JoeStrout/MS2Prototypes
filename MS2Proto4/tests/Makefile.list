# Makefile for CS_List unit tests

CXX = g++
CXXFLAGS = -std=gnu++11 -Wall -Wextra -g
INCLUDES = -I../cpp/core

# CS_List is header-only, so we only need the test file
SOURCES = test_CS_List.cpp

# Output binary
TARGET = test_CS_List

# Default target
all: $(TARGET)

$(TARGET): $(SOURCES)
	@echo "Building CS_List unit tests..."
	$(CXX) $(CXXFLAGS) $(INCLUDES) $(SOURCES) -o $(TARGET)
	@echo "Build complete: ./$(TARGET)"

# Run tests
test: $(TARGET)
	@echo "Running tests..."
	@./$(TARGET)

# Clean
clean:
	rm -f $(TARGET)
	@echo "Clean complete"

.PHONY: all test clean
